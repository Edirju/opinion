---
import Section from "../Section.astro";
import { skills } from "../../data/cv.json";
---

<Section>
  <ul>
    {
      skills.map(({ name }) => {
        return (
          <li>
            <span>{name}</span>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    li {
      display: flex;
      align-items: center;
      gap: 0.25rem;
      font-size: 0.75rem;
      font-family: var(--mono);
      background: rgb(var(--dark), 0.85);
      color: rgb(var(--light), 0.85);
      padding: 0.25rem 0.5rem;
      border-radius: 4px;
    }
  }
</style>
