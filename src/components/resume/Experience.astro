---
import Section from "../Section.astro";
import { work } from "../../data/cv.json";
---

<Section title="Experiencia Laboral">
  <ul>
    {
      work.map(
        ({ name, startDate, endDate, position, summary, url, highlights }) => {
          const starYear = new Date(startDate).getFullYear();
          const endYear =
            endDate != null ? new Date(endDate).getFullYear() : "Presente";
          const years = `${starYear} - ${endYear}`;
          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>
                      <a href="">{name}</a>
                    </h3>
                    <h4>{position}</h4>
                  </div>
                  <time>{years}</time>
                </header>
                <footer>
                  {highlights.map((highlight) => {
                    return (
                      <p>
                        <span>â€¢</span>
                        {highlight}
                      </p>
                    );
                  })}
                </footer>
              </article>
            </li>
          );
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    list-style: none;
    li article header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 0.25rem;
      font-family: var(--body);
      h3 {
        font-size: 1rem;
        font-weight: 600;
        text-wrap: pretty;
        color: rgb(var(--dark), 0.85);
        letter-spacing: -0.025em;
        transition: all 0.2s ease-in-out;
        &:hover {
          color: rgb(var(--dark));
          text-decoration: underline;
          text-underline-offset: 2px;
        }
      }
      h4 {
        font-size: 14px;
        font-weight: 500;
        color: rgb(var(--dark), 0.65);
        font-family: var(--mono);
      }
      time {
        font-size: 12px;
        font-weight: 300;
        color: rgb(var(--dark), 0.55);
        min-width: 102px;
        @media (width <= 700px) {
          text-align: right;
        }
      }
    }
    li article footer {
      font-size: 0.75rem;
      font-weight: 300;
      font-family: var(--mono);
      color: rgb(var(--dark), 0.85);
      p {
        display: flex;
        gap: 4px;
        letter-spacing: -0.05em;
        margin: 0;
        padding: 0;
        line-height: 1.25;
        span {
          color: rgb(var(--dark), 0.85);
        }
      }
    }
  }
</style>
