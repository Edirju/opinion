---
const { title } = Astro.props;
---

<section
  class="max-w-[700px] font-[family-name:var(--body)] mt-0 mx-auto mb-16"
>
  {
    title && (
      <h2 class="text-xl font-bold tracking-tight leading-normal not-italic font-[family-name:var(--heading)]">
        {title}
      </h2>
    )
  }
  <slot />
</section>

<style>
  @media (width <= 700px) {
    section {
      padding-inline: 1rem;
      padding-block: 0;
      margin-bottom: 38px;
    }
  }
</style>
