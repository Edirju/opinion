---
import HeaderLink from "./HeaderLink.astro";
import Logo from "../icons/Logo.astro";
---

<header
  class="font-[family-name:var(--body)] text-[rgb(var(--light),0.55)] sticky top-0 z-20 bg-[rgb(var(--black),0.20)] backdrop-blur-md backdrop-saturate-150 shadow-[0_0_25px_rgb(var(--black),0.45)] w-full bg-linear-to-br from-[rgb(var(--dark),0.20)] via-[rgb(var(--primary),0.05)] to-[rgb(var(--black),0.20)] border-b border-[rgb(var(--primary),0.05)] mb-[36px] md:mb-[56px]"
>
  <section
    class="menu max-w-[700px] p-4 md:px-0 flex flex-row flex-wrap items-center justify-between md:mx-auto"
  >
    <a
      href="/"
      class="logo flex items-center gap-1 transition-all duration-300 ease-in-out text-[rgb(var(--primary),0.65)] hover:text-[rgb(var(--light),0.65)] hover:text-shadow-[0_0_8px_rgb(var(--primary),0.45)]"
    >
      <figure
        class="favicon rotacion hover:shadow-[0_0_8px_rgb(var(--primary),0.45)] rounded-full"
      >
        <Logo class="" />
      </figure>
      <h2
        class="text-2xl font-semibold tracking-tighter sm:pr-1 sm:border-r sm:border-[rgb(var(--primary),0.25)]"
      >
        untaledinson...
      </h2>
    </a>
    <nav
      class="flex flex-wrap items-center sm:justify-center justify-between gap-3 sm:gap-6"
    >
      <HeaderLink href="/blog">
