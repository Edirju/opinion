        <span
          class="text-sm font-light uppercase tracking-tight hidden md:block"
          >Resume</span
        >
      </HeaderLink>
    </nav>
  </section>
</header>

<style>
  @plugin '@midudev/tailwind-animations';
  span {
    position: relative;
    transition: all 0.3s ease;
    &::after {
      content: "";
      position: absolute;
      left: 0;
      right: 0;
      top: 100%;
      height: 1px;
      background-color: rgb(var(--primary));
      transform: scaleX(0);
      transition: 0.2s;
      transform-origin: left;
    }
    &:hover::after {
      transform: scaleX(1);
    }
  }
  .rotacion {
    transition-property: transform;
    transition-duration: 0.3s;
    transition-delay: 0s;
    &:hover {
      transform: rotate(360deg);
      color: rgb(var(--light), 0.65);
    }
  }
  .menu {
    animation: fade-in-left 0.6s ease-out;
  }
  .favicon{
    animation: rotate-in .8s ease-out;
  }
